--Dette er de oprindelige queries der blev brugt for at lave databasen. Databasen er senere blevet ændret.

--Adgang skal enten være 'administrator' eller 'ejendomsmægler'.
CREATE TABLE logInd (
	logIndID INT PRIMARY KEY IDENTITY(1,1),
	brugernavn VARCHAR(50),
	password VARCHAR(50),
	adgang VARCHAR(20)
);

CREATE TABLE købere (
	køberID INT PRIMARY KEY IDENTITY(1,1),
	navn VARCHAR(50),
	telefonnummer INT,
	mail VARCHAR(50)
);

CREATE TABLE sælgere (
	sælgerID INT PRIMARY KEY IDENTITY(1,1),
	navn VARCHAR(50),
	telefonnummer INT,
	mail VARCHAR(50)
);

CREATE TABLE ejendomsmæglere (
	ejendomsmæglerID INT PRIMARY KEY IDENTITY(1,1),
	navn VARCHAR(50),
	telefonnummer INT,
	mail VARCHAR(50)
);

--Status skal enten være 'til salg' eller 'solgt'.
CREATE TABLE boliger (
	boligID INT PRIMARY KEY IDENTITY(1,1),
	adresse VARCHAR(50),
	kvadratmeter INT,
	type VARCHAR(50),
	pris INT,
	afstandTilIndkøb INT,
	status VARCHAR(50),
	sælgerID INT FOREIGN KEY REFERENCES sælgere(sælgerID)
);

CREATE TABLE salg (
	salgsID INT PRIMARY KEY IDENTITY(1,1),
	boligID INT FOREIGN KEY REFERENCES boliger(boligID),
	pris INT,
	køberID INT FOREIGN KEY REFERENCES købere(køberID),
	salgstidspunkt DATETIME,
	ejendomsmæglerID INT FOREIGN KEY REFERENCES ejendomsmæglere(ejendomsmæglerID),
	sælgerID INT FOREIGN KEY REFERENCES sælgere(sælgerID)
);
